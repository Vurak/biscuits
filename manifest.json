{
  "manifest_version": 2,
  "name": "Biscuits",
  "version": "0.0.1",
  "description": "Biscuits init",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "notifications",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon.png"
    },
    "default_title": "Biscuits",
    "default_popup": "popup.html"
  }
}